{
  "manifest_version": 2,
  "name": "Remove headers",
  "description": "This extension removes header from the current page",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "lykahb@gmail.com"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icon48.png"
  },
  "icons": {
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "lib/modernizr-3.5.0.js",
        "lib/underscore-1.8.3.js",
        "lib/css-selector-generator-1.0.4.js",
        "lib/css-parse.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}
