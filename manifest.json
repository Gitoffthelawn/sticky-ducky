{
  "manifest_version": 2,
  "name": "Sticky Ducky",
  "author": "Boris Lykah",
  "description": "Cleans pages of the sticky elements and shows them when needed",
  "homepage_url": "https://github.com/lykahb/sticky-ducky",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "lykahb@gmail.com"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "lib/detectIt-3.0.1.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icon48.png"
  },
  "icons": {
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "lib/detectIt-3.0.1.js",
        "lib/underscore-1.8.3.js",
        "lib/css-selector-generator-1.0.4.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}
